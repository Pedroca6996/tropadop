const EventEmitter = require('events');
const sistema = new EventEmitter();
// Listener para login
sistema.on('login', (usuario) => {
    console.log(`Usuário "${usuario}" fez login.`);
});
// Listener para logout
sistema.on('logout', (usuario) => {
    console.log(`Usuário "${usuario}" saiu.`);
});
// Emitindo eventos
sistema.emit('login', 'Alice');
sistema.emit('logout', 'Alice');

//Saída esperada:
//Usuário "Alice" fez login.
//Usuário "Alice" saiu. 